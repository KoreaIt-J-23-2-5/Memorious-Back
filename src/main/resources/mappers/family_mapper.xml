<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.memorious.back.repository.FamilyMapper">
    <resultMap id="familyList" type="com.memorious.back.entity.FamilyEntity">
        <id property="familyId" column="family_id" />
        <result property="familyName" column="family_name" />
        <result property="profileUrl" column="family_profile_url" />
        <result property="ownerId" column="owner_id" />
    </resultMap>

    <insert id="saveFamily"
            useGeneratedKeys="true"
            keyProperty="familyId"
            parameterType="com.memorious.back.entity.FamilyEntity">
        insert into family_tb(family_id, family_name, owner_id)
        values (0, #{familyName}, #{ownerId})
    </insert>
<!--     팀 생성 시 생성한 유저도 member_tb에 insert-->
    <insert id="saveMember" parameterType="hashmap">
        insert into member_tb
        values (0, #{userId}, #{familyId})
    </insert>
    <select id="getFamily" resultType="com.memorious.back.entity.FamilyEntity">
        SELECT
            family_id,
            family_name,
            family_profile_url,
            owner_id
        FROM
            family_tb
        WHERE
            family_id = #{familyId}
    </select>
</mapper>